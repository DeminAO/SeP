<?xml version="1.0" encoding="UTF-8"?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms" 
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       Title="CrossMessenger"
       x:Class="CrossMessenger.Client.AppShell"
	   xmlns:messegingViews="clr-namespace:CrossMessenger.Client.Messeging.Views"
	   xmlns:settingsViews="clr-namespace:CrossMessenger.Client.Settings.Views">
	
	<FlyoutItem Title="Сообщения" Icon="icon_about.png">
		<ShellContent Route="DialogsViewPage" ContentTemplate="{DataTemplate messegingViews:DialogsViewPage}" />
    </FlyoutItem>

	<FlyoutItem Title="Настройки" Icon="icon_feed.png">
		<ShellContent Route="SettingsPage" ContentTemplate="{DataTemplate settingsViews:SettingsPage}" />
	</FlyoutItem>
</Shell>
